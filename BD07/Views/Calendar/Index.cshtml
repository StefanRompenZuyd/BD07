@{
    ViewBag.title = "Calendar";
}

<h2>Calendar</h2>
<h3>Upcoming events</h3>

@if (ViewBag.Eventlist!=null)
{
    <table class="table table-hover">
        <tr>
            <th>
                Event Title
            </th>
            @foreach(var item in ViewBag.Eventlist)
            {
                <tr>
                    <td>@item</td>
                </tr>
            }
        </tr>
    </table>
}
else {
    <div class="alert alert-danger">No Upcoming events</div>
}