                @Html.DisplayNameFor(model => model.Patient[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Adress)
